FROM alpine:3

ARG VERSION
ENV VERSION=$VERSION

WORKDIR /
RUN apk update --no-cache && apk upgrade && apk add --no-cache ca-certificates

COPY templates ./
COPY bootstrap.txt ./Bootstrap.txt
COPY ethtweet /ethtweet

EXPOSE 4001/tcp
EXPOSE 4001/udp
EXPOSE 8080
ENTRYPOINT   ["/ethtweet"]
